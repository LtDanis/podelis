{% extends '::base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-md-offset-3 col-md-offset-3 col-md-6 col-sm-12">
                {% for category in categories %}
                    <li><a href="{{ path('categoryTest',{'id': category.id, 'slug': category.slugify}) }}">{{ category.title }}</a></li>
                {% endfor %}
            </div>
        </div>
    </div>

{% endblock %}