{% extends "::base.html.twig" %}

{% block title %}Leaderboard{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}


{% block body %}
   <div class="container">

       <table class="table" id="leaderboard">
           <thead>
           <tr>
               <th width="14%">Avatar</th>
               <th width="14%">Name</th>
               <th width="14%">Correct answers</th>
               <th width="14%">Incorrect answers</th>
               <th width="14%">Tests Taken</th>
               <th width="14%">Correct ratio</th>
               <th width="14%">Time spent</th>
           </tr>
           </thead>
           <tbody>
           <tr>
               <td colspan="3" class="dataTables_empty">Loading data from server</td>
           </tr>
           </tbody>
           <tfoot>
           <tr>
               <th width="14%">Avatar</th>
               <th width="14%">Name</th>
               <th width="14%">Correct answers</th>
               <th width="14%">Incorrect answers</th>
               <th width="14%">Tests Taken</th>
               <th width="14%">Correct ratio</th>
               <th width="14%">Time spent</th>
           </tr>
           </tfoot>
       </table>
       </table>
   </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        leaderboard('{{ path('leaderboard') }}', $('#leaderboard'));
    </script>
{% endblock %}
